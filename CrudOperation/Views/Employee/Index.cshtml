<div ng-app="myapp">
    <div ng-controller="EmployeeCtrl">
        <form novalidate name="frmEmployee" id="frmEmployee" class="form-horizontal row-border">
            <br />
            <div class="col-md-12">
                <div class="form-group">
                    <label class="col-md-4 control-label" for="input17"> Employee Name</label>
                    <div class="col-md-7">
                        <input type="text"
                               id="idEmployeeName"
                               class="form-control"
                               name="nameEmployeeName" ng-model="EmployeeName" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-4 control-label" for="input18"> Department</label>
                    <div class="col-md-7">
                        <select ng-model="selectedDepartment" ng-options="x.DepartmentName for x in Department" ng-change="ReadDesignation()"></select>
                    </div>
                </div>


                <div class="form-group">
                    <label class="col-md-4 control-label" for="input19"> Designation</label>
                    <div class="col-md-7">
                        <select ng-model="selectedDesignation" ng-options="x.DesignationName for x in Designation"></select>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-4 control-label" for="input19"> Gender</label>
                    <div class="col-md-7">
                        <input type="radio" name="gender" required class="styled" value="M" ng-model="selectedGender">
                        <label for="inputGenderM"> Male </label>
                        <input type="radio" name="gender" required class="styled" value="F" ng-model="selectedGender">
                        <label for="inputGenderF"> Female </label>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-4 control-label" for="input20"> Date of Birth</label>
                    <div class="col-md-7">
                        <p class="input-group">

                            @*<div class='input-group date' id='datetimepicker2'>
                                    <input type='text' class="form-control" />
                                    <span class="input-group-addon">
                                        <span class="glyphicon glyphicon-calendar"></span>
                                    </span>
                                </div>*@

                            <div class="col-md-6">
                        <p class="input-group">
                            <input type="text" class="form-control" uib-datepicker-popup="{{::format}}" ng-model="selectedDOB" is-open="popup1.opened" ng-required="true" close-text="Close"
                                   ng-model-options="ngModelOpts"
                                   datepicker-options="dateOptions" />
                            <span class="input-group-btn">
                                <button type="button" class="btn btn-default" ng-click="open1()"><i class="glyphicon glyphicon-calendar"></i></button>
                            </span>
                        </p>
                    </div>


                </div>


                <div class="form-group">
                    <label class="col-md-4 control-label" for="input19"> Employee Salary</label>
                    <div class="col-md-7">
                        <input type="number" id="idSalary" class="form-control" name="Salary" ng-model="Salary" />
                        @*<rzslider rz-slider-model="slider.minValue" rz-slider-high="slider.maxValue" rz-slider-options="slider.options" rz-slider-onchange="slider.onChange"></rzslider>*@
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-4 control-label" for="input19"> Work Location Preferred</label>
                    <div class="col-md-7">
                        <input type="checkbox" ng-model="LocHome">&nbsp;Home&nbsp;&nbsp;&nbsp;
                        <input type="checkbox" ng-model="LocOffice">&nbsp;Office
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-4">
                    </div>
                    <div class="col-md-7">
                        <span id="save" class="btn btn-success margin-right-btn" ng-click="SaveUpdate()">
                            <i class="icon-save"></i> {{btnText}}
                        </span>
                        <span id="save" class="btn btn-success margin-right-btn" ng-click="Clear()">
                            <i class="icon-save"></i> Cancel
                        </span>
                    </div>
                </div>

            </div>
            <div class="clearfix"></div>
            <hr />
            <table class="table table-hover general-table">
                <thead class="grid-top-panel">
                    <tr>
                        <th style="display:none">EmpId</th>
                        <th>Employee Name</th>
                        <th style="display:none">DeptId</th>
                        <th>Department</th>
                        <th>Salary</th>
                        <th style="text-align:center;">Action</th>

                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="row in EmployeeList">
                        <td style="display:none">{{row.EmployeeId}}</td>
                        <td> {{row.EmployeeName}}</td>
                        <td style="display:none">{{row.DepartmentId}}</td>
                        <td> {{row.DepartmentName}}</td>
                        <td style="display:none">{{row.DesignationId}}</td>
                        <td> {{row.DesignationName}}</td>
                        <td>{{row.Gender == "M"?"Male":"Female"}}</td>
                        <td>{{row.DateofBirth | date:'dd-MM-yyyy'}}</td>
                        <td>{{row.Salary}}</td>
                        <td>{{row.WrkLocationAllowed}}</td>
                        <td style="text-align:center; color:white">
                            <span>
                                <span id="save" class="btn btn-primary margin-right-btn" ng-click="EditEmployee(row)">
                                    Edit
                                </span>
                                <span id="save" class="btn btn-danger margin-right-btn" ng-click="DeleteEmployee(row)">
                                    Delete
                                </span>
                            </span>
                        </td>
                        @*<td style="text-align:right; color:white">
                                <span>
                                    <span id="save" class="btn btn-danger margin-right-btn" ng-click="DeleteStudent(row)">
                                        Delete
                                    </span>
                                </span>
                            </td>*@
                    </tr>
                </tbody>
                <tfoot></tfoot>
            </table>

            <br />
            <br />
        </form>
    </div>

</div>



<script src="//ajax.googleapis.com/ajax/libs/angularjs/1.5.5/angular.js"></script>
<script src="//ajax.googleapis.com/ajax/libs/angularjs/1.5.5/angular-animate.js"></script>
